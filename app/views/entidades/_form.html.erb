<%= simple_form_for(@entidade) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>

    <div class="row">
      
      <div class="col-lg-6">
        <%= f.input :data_criacao %>
      </div>

      <div class="col-lg-6">
        <%= f.input :codigo %>
      </div>

    </div>
   
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
