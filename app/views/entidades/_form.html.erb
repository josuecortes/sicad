<%= simple_form_for(@entidade) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>

    <div class="row">
      
      <div class="col-lg-4">
        <%= f.input :data_criacao %>
      </div>

      <div class="col-lg-8">
        <%= f.input :codigo %>
      </div>

    </div>
   
  </div>

  <br/>

  <div class="form-actions">
    <%= link_to 'Voltar', entidades_path, :class=>'btn btn-default' %>
    <%= f.button :submit, :class=>"btn btn-primary" %>
  </div>

  <br/>

<% end %>
