<%= simple_form_for(@cidade) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :numero_total %>
  </div>

  <br/>

  <div class="form-actions">
    <%= link_to 'Voltar', cidades_path, :class=>'btn btn-default' %>
    <%= f.button :submit, :class=>"btn btn-primary" %>
  </div>

  <br/>

<% end %>
