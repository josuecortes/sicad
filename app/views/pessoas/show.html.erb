<h4> Localização Aproximada para: <%= "#{@pessoa.bairro.cidade.nome}, #{@pessoa.logradouro}, #{@pessoa.numero}" %></h4>
  <div style='width: 800px;'>
    <div id="pony" style='width: 800px; height: 400px;'></div>
  </div>

  <script src="//maps.google.com/maps/api/js?v=3.25&key=AIzaSyCxbFqjuxrZd3Wofu96qQyOOFpaMlDr6vw"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
  
  <script type="text/javascript" src="https://raw.github.com/HPNeo/gmaps/master/gmaps.js"></script>



  <script>
  $(document).ready(function(){
    map = new GMaps({
      div: '#pony',
      lat: <%= @pessoa.latitude %>,
      lng: <%= @pessoa.longitude %> 
    });

  map.addMarker({
    lat: <%= @pessoa.latitude %>,
    lng: <%= @pessoa.longitude %>,
    click: function(e) {
      alert(
        "NOME: <%= @pessoa.nome %> \nENDEREÇO: <%= @pessoa.logradouro %>, <%= @pessoa.numero %>, <%= @pessoa.bairro.nome %>"
        );
    }
  });


  infoWindow: {
    content: '<p>HTML Content</p>'
  }




  });


  </script>







