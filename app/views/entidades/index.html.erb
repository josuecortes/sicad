<% content_for :titulo do %>
  <i class="fa fa-user-plus" aria-hidden="true"></i> Entidades
<% end %>

<% content_for :sub_titulo do %>
  <ul class="list-inline pull-right">
    <%= link_to link_icone2('nova','Adicionar'), new_entidade_path, :class=> 'btn btn-success', :title=>"Nova Entidade" %>
  </ul>
  <p>
    Lista de Entidades
  </p>
<% end %>

<table id="entidades" class="display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Data criacao</th>
      <th>Codigo</th>
      <th>Cidade</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @entidades.each do |entidade| %>
      <tr>
        <td><%= entidade.nome %></td>
        <td><%= entidade.data_criacao %></td>
        <td><%= entidade.codigo %></td>
        <td><%= detalhes2(entidade.cidade, :nome) %></td>
        <td>
          <%= link_to link_icone('detalhes'), entidade, :class => 'btn btn-default' %>
          <%= link_to link_icone('editar'), edit_entidade_path(entidade), :class => 'btn btn-primary' %>
          <%= link_to link_icone('apagar'), entidade, method: :delete, data: { confirm: 'Você esta certo disso?' }, :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

